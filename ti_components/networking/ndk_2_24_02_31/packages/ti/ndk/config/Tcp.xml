<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<gep name="Tcp" title="TCP Socket Settings" version="1">

<page name="Module" title="Module Settings">
<html><body><table>
  <tr>
    <td>
      <form>
        <p>The Tcp module allows you to configure TCP socket settings.</p>
        <p></p> <!-- create some white space -->
      </form>
    </td>
  </tr>

  <tr><td colspan="2">
    <control type="checkbox" label="Add the TCP module to my configuration" value="value:this.$used" bold="true"/></td>
  </tr>
  <tr></tr> <!-- create some white space -->

<!-- Row 1 (contains 1 columns) -->
  <tr>
    <td>
    <h1>Packet Settings</h1>

    <table>
      <tr>
        <td><control type="label" label="Maximum reassembly packets" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.maxNumReasmPkts"
             tooltip="value:this.maxNumReasmPkts.$summary"/></td>
      </tr>
    </table>
    </td>
  </tr>
<!-- End Row 1 -->

<!-- Row 2 (contains 2 columns) -->
  <tr>
    <td>
    <h1>Buffer Settings</h1>
    <table>
      <tr>
        <td><control type="label" label="Default TCP send buffer size (bytes)" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.transmitBufSize"
             tooltip="value:this.transmitBufSize.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Default TCP receive buffer size (bytes)" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.receiveBufSize"
             tooltip="value:this.receiveBufSize.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="TCP receive buffer size limit (bytes)" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.receiveBufLimit"
             tooltip="value:this.receiveBufLimit.$summary"/></td>
      </tr>
    </table>
    </td>
  </tr>
<!-- End Row 2 -->

<!-- Row 3 (contains 2 columns) -->
  <tr>
    <td>
    <h1>Time Settings</h1>
    <table>
      <tr>
        <td><control type="label" label="Socket keep idle time (0.1 seconds)" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.keepIdleTime"
             tooltip="value:this.keepIdleTime.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Socket keep alive probe interval time (0.1 seconds)" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.keepProbeInterval"
             tooltip="value:this.keepProbeInterval.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Socket keep alive probe timeout (0.1 seconds)" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.keepProbeTimeout"
             tooltip="value:this.keepProbeTimeout.$summary"/></td>
      </tr>
    </table>
    </td>
  </tr>
<!-- End Row 3 -->

</table></body></html>

</page>
<properties name="Advanced" title="All Options" enabled="true" visible="true" link="this"/>
</gep>

