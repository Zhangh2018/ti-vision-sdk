<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<gep name="Route" title="Route Settings" version="1">

<page name="Module" title="Module Settings">
<html><body><table>
  <tr>
    <td>
      <form>
        <p>This configuration page allows you to configure Route settings for
           your network application.</p>
        <p></p> <!-- create some white space -->
      </form>
    </td>
  </tr>

  <tr><td colspan="2">
    <control type="checkbox" label="Add the Route module to my configuration" value="value:this.$used" bold="true"/></td>
  </tr>
  <tr></tr> <!-- create some white space -->

  <tr>
    <td>
      <h1>General Route Options</h1>
    <table>
      <tr>
        <td><control type="label" label="Route down time (seconds)" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeDownTime"
             tooltip="value:ti.ndk.config.Ip.routeDownTime.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Route keep alive time (seconds)" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeKeepAliveTime"
             tooltip="value:ti.ndk.config.Ip.routeKeepAliveTime.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Cloned route timeout (seconds)" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeCloneTimeout"
             tooltip="value:ti.ndk.config.Ip.routeCloneTimeout.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Default MTU" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeDefaultMtu"
             tooltip="value:ti.ndk.config.Ip.routeDefaultMtu.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Advertising period" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeAdvertisePeriod"
             tooltip="value:ti.ndk.config.Ip.routeAdvertisePeriod.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Advertising lifetime" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeAdvertiseLifetime"
             tooltip="value:ti.ndk.config.Ip.routeAdvertiseLifetime.$summary"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Advertising preference level" align="left"/></td>
        <td><control type="editbox" 
             value="value:ti.ndk.config.Ip.routeAdvertisePrefLvl"
             tooltip="value:ti.ndk.config.Ip.routeAdvertisePrefLvl.$summary"/></td>
      </tr>
      <tr>
         <td colspan="2"><control type="checkbox" 
             label="Enable route control debug messages"
             value="value:ti.ndk.config.Ip.routeCtrlEnableDebug" 
             tooltip="value:ti.ndk.config.Ip.routeCtrlEnableDebug.$summary"/></td>
      </tr>
    </table>
    </td>
  </tr>

</table></body></html>
</page>
<properties name="Advanced" title="All Options" enabled="true" visible="true" link="ti.ndk.config.Ip"/>
</gep>

